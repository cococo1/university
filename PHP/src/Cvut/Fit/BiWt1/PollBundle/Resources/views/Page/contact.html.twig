{% extends 'PollBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact surveys</h1>
    </header>

{% if app.session.hasFlash('surveys-notice') %}
    <div class="blogger-notice">
        {{ app.session.flash('surveys-notice') }}
    </div>
{% endif %}

    <p>Want to contact Surveys Online?</p>
    <form action="{{ path('PollBundle_contact') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}